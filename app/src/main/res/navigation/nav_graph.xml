<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/homeFragment"
    android:id="@+id/navigation">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.teaml.kidsphonelimit.ui.home.HomeFragment"
        android:label="home_fragment"
        tools:layout="@layout/home_fragment" >
        <action
            android:id="@+id/action_homeFragment_to_lockFragment"
            app:destination="@id/lockFragment" />
    </fragment>

    <fragment
        android:id="@+id/lockFragment"
        android:name="com.teaml.kidsphonelimit.ui.lock.LockFragment"
        android:label="home_fragment"
        tools:layout="@layout/lock_fragment" >
        <action
            android:id="@+id/action_lockFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>

    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.teaml.kidsphonelimit.ui.about.AboutFragment"
        android:label="@string/about"
        tools:layout="@layout/about_fragment" />

</navigation>